@model IEnumerable<EmergencyHoundModel.T_OE_ROLES>
@{
    ViewBag.Title = "Roles";
}

<!-- render the left menu -->
@Html.Action("_LeftMenu", "Shared")

<!-- render the main content -->
<section id="content">
    <section class="vbox">
        <section class="scrollable padder">
            <ul class="breadcrumb no-border no-radius b-b b-light pull-in">
                <li><a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-home"></i> Home</a></li>
                <li><a href="#">Admin</a></li>
                <li class="active">Roles</li>
            </ul>
            <div class="m-b-md">
                <h3 class="m-b-none">Roles</h3>
            </div>

            <section class="panel panel-default">
                <div class="table-responsive">

                    <table class="table table-striped m-b-none" data-ride="datatables">
                        <tr>
                            <th></th>
                            <th>Role ID</th>
                            <th>Role Name</th>
                            <th>Role Desc</th>
                            <th>Created Date</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("RoleEdit","Admin", new { id=item.ROLE_IDX })" class="btn btn-rounded btn-xs btn-icon btn-default"><i class="fa fa-pencil fa-success"></i></a>
                                    <div class="delete-section" style="display:inline">
                                        <a class=" btn btn-rounded btn-xs btn-icon btn-danger delete-link" href="@Url.Action("Delete", new {id = item.ROLE_IDX})"><i class="fa fa-times "></i></a>
                                        <div class="btn btn-rounded btn-xs btn-warning delete-confirm" style="display:none" data-delete-id="@item.ROLE_IDX" data-delete-path="@(Url.Content("~/"))" data-delete-p="/Admin/DeleteRole"><b>Confirm Delete</b></div>
                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ROLE_IDX)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ROLE_NAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ROLE_DESC)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CREATE_DT)
                                </td>
                            </tr>
                        }

                    </table>

                </div>

            </section>
        </section>
    </section>
    <a href="#" class="hide nav-off-screen-block" data-toggle="class:nav-off-screen" data-target="#nav"></a>
</section>


@Scripts.Render("~/bundles/confirmdelete")




